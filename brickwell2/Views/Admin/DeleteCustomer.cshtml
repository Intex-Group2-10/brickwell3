@{
    Layout = "_AdminLayout";
}
@model Customer

<h2>Confirm Deletion</h2>
<h3>@Model.FirstName, @Model.LastName</h3>
<form asp-controller="Admin" asp-action="DeleteCustomer" method="post">

    <input type="hidden" asp-for="CustomerId" />

    <button type="submit">Delete</button>
    <a class="btn btn-info" asp-controller="Admin" asp-action="AdminUsers">Cancel</a>
</form>