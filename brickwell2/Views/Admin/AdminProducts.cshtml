@{
    Layout = "_AdminLayout.cshtml";
}
<div style="width: 100vw; height: 150px; position: relative; background: #FFF6C9; display: flex; justify-content: flex-start; align-items: center; padding-left: 100px;">
    <h1 style="font-size: 60px;">Products</h1>
    </div>

<table class="table table-bordered">

    <thead class="fw-bold">
    <tr>
        <td>Product ID</td>
        <td>Name</td>
        <td>Year</td>
        <td>Number of Parts</td>
        <td>Price</td>
        <td>Image Link</td>
        <td>Primary Color</td>
        <td>Secondary Color</td>
        <td>Description</td>
        <td>Category</td>
        <td><a class="btn btn-danger" asp-controller="Admin" asp-action="">Add User</a></td>
    </tr>
        
    </thead>
    
    @foreach (var x in Model.Products)
    {
        <tbody>
        <tr>
            <td>@x.product_ID</td>
            <td>@x.name</td>
            <td>@x.year</td>
            <td>@x.num_parts</td>
            <td>@x.price</td>
            <td>@x.img_link</td>
            <td>@x.primary_color</td>
            <td>@x.secondary_color</td>
            <td>@x.description</td>
            <td>@x.category</td>
            <td><a class="btn btn-info" asp-controller="Admin" asp-action="EditProduct" asp-route-id="@x.UserId">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@x.UserId">Delete</a></td>
        </tr>
        </tbody>
    }
    
</table>
<div page-model="@Model.PaginationInfo" page-action="AdminProducts"></div>